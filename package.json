{
  "name": "zotero-s3-sync",
  "type": "module",
  "version": "0.1.9",
  "description": "Sync Zotero attachments to S3-compatible storage",
  "config": {
    "addonName": "Zotero S3 Sync",
    "addonID": "s3sync@zotero.plugin",
    "addonRef": "s3sync",
    "addonInstance": "S3Sync",
    "prefsPrefix": "extensions.zotero.s3sync"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/John10240/zotero-plugin2.git"
  },
  "author": "Johnash1024",
  "bugs": {
    "url": "https://github.com/John10240/zotero-plugin2/issues"
  },
  "homepage": "https://github.com/John10240/zotero-plugin2#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save",
    "bump": "node bump-version.js"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.0-beta.13"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^6.2.1",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "zotero-plugin-scaffold": "^0.8.2",
    "zotero-types": "^4.1.0-beta.4"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
